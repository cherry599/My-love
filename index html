<div class="box">
  <h2>Love Tic Tac Toe ðŸ’–</h2>

  <!-- SETUP -->
  <div id="setup">
    <input id="myName" placeholder="Your name ðŸ’•">
    <p>Your room code:</p>
    <h3 id="myId">Loadingâ€¦</h3>
    <p>OR join your partner:</p>
    <input id="joinId" placeholder="Enter room code">
    <button onclick="join()">Connect ðŸ’ž</button>
  </div>

  <!-- GAME -->
  <div id="game" style="display:none">
    <p id="status"></p>
    <p id="kisses"></p>

    <div class="board">
      <div class="cell" onclick="play(0)"></div>
      <div class="cell" onclick="play(1)"></div>
      <div class="cell" onclick="play(2)"></div>
      <div class="cell" onclick="play(3)"></div>
      <div class="cell" onclick="play(4)"></div>
      <div class="cell" onclick="play(5)"></div>
      <div class="cell" onclick="play(6)"></div>
      <div class="cell" onclick="play(7)"></div>
      <div class="cell" onclick="play(8)"></div>
    </div>

    <button onclick="reset()">Restart ðŸ’˜</button>
