<script>
let peer = new Peer();
let conn;
let board = Array(9).fill("");
let mySymbol = "ðŸ’‹";
let turn = "ðŸ’‹";
let gameOver = false;
let kisses = 0;
let myName = "Me";
let otherName = "Partner";

const cells = document.querySelectorAll(".cell");
const status = document.getElementById("status");
const kissText = document.getElementById("kisses");

peer.on("open", id=>{
  document.getElementById("myId").innerText = id;
});

peer.on("connection", c=>{
  conn = c;
  mySymbol = "âŒ";
  start();
});

function join(){
  const id = document.getElementById("joinId").value.trim();
  if(!id) return;
  conn = peer.connect(id);
  conn.on("open", start);
}

function start(){
  myName = document.getElementById("myName").value || "Me";
  document.getElementById("setup").style.display="none";
  document.getElementById("game").style.display="block";

  conn.on("data", data=>{
    board = data.board;
    turn = data.turn;
    gameOver = data.gameOver;
    kisses = data.kisses;
    otherName = data.name;
    render();
    if(data.winner) showWin(data.winner);
  });

  conn.send({name:myName});
}

function play(i){
  if(board[i] || turn!==mySymbol || gameOver) return;
  board[i]=mySymbol;
  const winner = checkWin();
  turn = mySymbol==="ðŸ’‹"?"âŒ":"ðŸ’‹";
  send(winner);
}

function send(winner){
  conn.send({
    board,turn,gameOver,winner,kisses,name:myName
  });
  render();
  if(winner) showWin(winner);
}

function checkWin(){
  const w=[[0,1,2],[3,4,5],[6,7,8],[0,3,6],[1,4,7],[2,5,8],[0,4,8],[2,4,6]];
  for(let c of w){
    if(board[c[0]] && board[c[0]]===board[c[1]] && board[c[1]]===board[c[2]]){
      gameOver=true;
      return board[c[0]];
    }
  }
  if(!board.includes("")){
    gameOver=true;
    return "draw";
  }
  return null;
}

function showWin(w){
  if(w==="draw"){
    status.innerText="Itâ€™s a draw ðŸ˜Œ";
  }else{
    kisses++;
    status.innerText = w===mySymbol
      ? `${myName} wins ðŸ˜˜`
      : `${otherName} wins ðŸ˜`;
    heartRain();
  }
}

function reset(){
  board=Array(9).fill("");
  turn="ðŸ’‹";
  gameOver=false;
  send(null);
}

function render(){
  board.forEach((v,i)=>cells[i].innerText=v);
  kissText.innerText="Kisses earned: ðŸ˜˜ "+kisses;
  if(!gameOver) status.innerText="Turn: "+turn;
}

function heartRain(){
  for(let i=0;i<25;i++){
    let h=document.createElement("div");
    h.className="hearts";
    h.innerHTML="ðŸ’–";
    h.style.left=Math.random()*100+"vw";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),4000);
  }
}
</script>

